<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MỞ MÀN HÌNH NHẬP LIỆU"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:padding="10dp"
        android:background="@drawable/custom_btn"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:onClick="HamMoManHinhNhapLieu"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DỮ LIỆU NHẬN TỪ ACTIVITY NHẬP LIỆU"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Họ và tên nhận được"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/tvHoTen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="23dp"
            android:textStyle="bold"
            android:textColor="#07B80F"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Năm sinh nhận được"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/tvNamSinh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="23dp"
            android:textStyle="bold"
            android:textColor="#07B80F"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

</LinearLayout>